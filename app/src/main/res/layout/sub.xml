<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yamada_pc.calc_easy.SubActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/set_kg_view"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:text="kg: "
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/setselect_view"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:text=" セット× "
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/set_RM_view"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 回"
            android:textSize="24sp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/warmset1_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <TextView
            android:text="1セット"
            android:textSize="24sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="20%"
            android:textSize="24sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set1kg" />

        <TextView
            android:text="kg"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/warmset2_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

       <TextView
          android:text="2セット"
          android:textSize="24sp"
          android:layout_width="100dp"
          android:layout_height="wrap_content" />

        <TextView
            android:text="55%"
            android:textSize="24sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set2kg"/>

        <TextView
            android:text="kg"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

     </LinearLayout>

    <LinearLayout
        android:id="@+id/warmset3_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <TextView
            android:text="3セット"
            android:textSize="24sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="70%"
            android:textSize="24sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set3kg"/>

        <TextView
            android:text="kg"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <TextView
            android:text="4セット"
            android:textSize="24sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="80%"
            android:textSize="24sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set4kg"/>

        <TextView
            android:text="kg"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <TextView
            android:text="5セット"
            android:textSize="24sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="80%"
            android:textSize="24sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set5kg"/>

        <TextView
            android:text="kg"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <TextView
            android:text="6セット"
            android:textSize="24sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="80%"
            android:textSize="24sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set6kg"/>

        <TextView
            android:text="kg"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:weightSum="1"
        >

        <Button
            android:text="戻る"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button"
            android:layout_weight="0.3" />

        <Button
            android:text="実行"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/act_button"
            android:layout_weight="0.3" />
    </LinearLayout>


</LinearLayout>
